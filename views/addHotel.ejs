  <link rel="stylesheet" href="css/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="images/favicon.png" />
</head>
<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%-include('adminHeader')-%>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
      <%-include('sidebaar')-%>
      <!-- partial -->
      <div id="city" style="width: 80%;">
        <h1 style="margin-top: 50px;text-align: center;">Add Hotel & Restaurant</h1>
        <form action="/addHotelPost" method="post" enctype="multipart/form-data" style="height: 500px;display: flex;flex-direction: column;justify-content: space-evenly;align-items: center;font-size: 20px;font-weight: bold;color: black;">
            <select name="citynameId" id="" class="form-control" style="font-size: 25px;font-weight: bold;color: black;">
                <option value="">Select City</option>
                <%data.map((val)=>{%>
                    <option value="<%=val.id%>"><%=val.cityname%></option>
                <%})%>
            </select>
            <input type="text" placeholder="Hotel Name" name="hotelname" class="form-control" style="font-size: 25px;font-weight: bold;color: black;">
            <input type="text" placeholder="Main Address" name="address" class="form-control" style="font-size: 25px;font-weight: bold;color: black;">
            <input type="text" placeholder="Mobile Number" name="number" class="form-control" style="font-size: 25px;font-weight: bold;color: black;">
            
            <select name="category" id="" class="form-control" style="font-size: 25px;font-weight: bold;color: black;">
                <option value="">Select Category</option>
                <option value="Hotel">Hotel</option>
                <option value="Restaurant">Restaurant</option>
            </select>
            <label for="" class="form-control" style="font-size: 25px;font-weight: bold;color: black;">Add Image of Hotel</label>
            <input type="file" name="image" class="form-control" style="font-size: 25px;font-weight: bold;color: black;">
            <button class="btn btn-primary">Add Hotel & Res.</button>
        </form>
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->

  <!-- base:js -->
  <script src="vendors/base/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page-->
  <!-- End plugin js for this page-->
